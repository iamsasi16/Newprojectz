<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
    }
    h1 {
      text-align: center;
      background-color: #f0f0f0;
      padding: 20px;
    }
    form {
      max-width: 600px;
      margin: 20px auto;
      border: 1px solid #ccc;
      padding: 50px;
      box-shadow: 2px 2px 5px rgba(0,0,0,0.1);
    }
    label {
      display: block;
      margin-bottom: 5px;
    }
    input {
      display: block;
      width: 100%;
      margin-bottom: 10px;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #ccc;
    }
    button {
      display: block;
      margin-top: 10px;
      padding: 10px 20px;
      border-radius: 5px;
      border: none;
      background-color: #0099ff;
      color: white;
      cursor: pointer;
    }
    .content-item {
      margin-bottom: 20px;
    }
    .content-item:last-child {
      margin-bottom: 10px;
    }
    .content-item label {
      margin-bottom: 0;
    }
    .content-item input[type="text"] {
      margin-bottom: 5px;
    }
    .content {
      padding-bottom: 10px;
      font-style: italic;
      font-size: xx-large;
    }
    .add-btn {
      display: inline-block;
      margin-right: 10px;
      padding: 5px 10px;
      border-radius: 5px;
      border: none;
      background-color: #dddddd;
      color: #555555;
      cursor: pointer;
    }
    .add-btn-group {
      display: flex;
      align-items: flex-start;
      margin-top: 10px;
    }
    .add-btn-group button {
      margin-right: 10px;
    }
  </style>
</head>
<body>
  <h1>Add a New Topic</h1>
  <form method="post" action="/store_book">
    <label for="title">Title</label>
    <input type="text" name="title" id="title">
    <br>
    <label for="titledescription">Title Description</label>
    <input type="text" name="titledescription" id="titledescription">
    <br>
    <label for="titleimage">Title Image</label>
    <input type="text" name="titleimage" id="titleimage">
    <br>
    <div id="subtitles-container">
      <div class="content-item">
        <label for="subtitle">Subtitle 1</label>
        <input type="text" name="subtitles[0][head]" placeholder="Subtitle">
        <input type="text" name="subtitles[0][description]" placeholder="Description">
        <input type="text" name="subtitles[0][imageurl]" placeholder="Image URL">
        <br>
      </div>
    </div>
    <div class="add-btn-group">
      <button type="button" onclick="addSubtitle()">Add Subtitle</button>
    </div>
    
    <button type="submit">Submit</button>

    <script>
      function addSubtitle() {
        const subtitlesContainer = document.getElementById('subtitles-container');

        const subtitleItem = document.createElement('div');
        subtitleItem.classList.add('content-item');

        const subtitleIndex = subtitlesContainer.children.length + 1;

        const subtitleHeadLabel = document.createElement('label');
        subtitleHeadLabel.textContent = 'Subtitle';

        const subtitleHeadInput = document.createElement('input');
        subtitleHeadInput.setAttribute('type', 'text');
        subtitleHeadInput.setAttribute('name', 'subtitles[' + subtitleIndex + '][head]');

        const subtitleDescriptionLabel = document.createElement('label');
        subtitleDescriptionLabel.textContent = 'Description';

        const subtitleDescriptionInput = document.createElement('input');
        subtitleDescriptionInput.setAttribute('type', 'text');
        subtitleDescriptionInput.setAttribute('name', 'subtitles[' + subtitleIndex + '][description]');

        const subtitleImageURLLabel = document.createElement('label');
        subtitleImageURLLabel.textContent = 'Image URL';

        const subtitleImageURLInput = document.createElement('input');
        subtitleImageURLInput.setAttribute('type', 'text');
        subtitleImageURLInput.setAttribute('name', 'subtitles[' + subtitleIndex + '][imageurl]');

        subtitleItem.appendChild(subtitleHeadLabel);
        subtitleItem.appendChild(subtitleHeadInput);
        subtitleItem.appendChild(subtitleDescriptionLabel);
        subtitleItem.appendChild(subtitleDescriptionInput);
        subtitleItem.appendChild(subtitleImageURLLabel);
        subtitleItem.appendChild(subtitleImageURLInput);

        subtitlesContainer.appendChild(subtitleItem);
      }
    </script>
  </form>
</body>
</html>
